{
  "name": "calculator-app",
  "version": "1.0.0",
  "description": "Calculadora web com testes completos",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 3000 -c-1",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/**/*.integration.test.js'",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint . --ext .js",
    "build": "echo 'Build concluÃ­do'",
    "deploy": "echo 'Deploy iniciado'"
  },
  "keywords": [
    "calculator",
    "web",
    "javascript",
    "jest",
    "playwright",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}