{
  "name": "calculator-app",
  "version": "1.0.0",
  "description": "Calculadora web com testes completos",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 3000 -c-1 --silent",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/**/*.test.js' --testPathIgnorePatterns='.*\\.e2e\\.test\\.js$' --testPathIgnorePatterns='.*\\.integration\\.test\\.js$'",
    "test:integration": "jest --testMatch='**/tests/**/*.integration.test.js'",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='.*\\.e2e\\.test\\.js$'",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint . --ext .js",
    "build": "echo 'Build concluÃ­do com sucesso'",
    "deploy": "echo 'Deploy iniciado'"
  },
  "keywords": [
    "calculator",
    "web",
    "javascript",
    "jest",
    "playwright",
    "testing",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
